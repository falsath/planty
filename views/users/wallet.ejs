<%- include('../userLayouts/userhead.ejs') %>

<style>
  body {
    background-color: #f8f9fa;
    font-family: 'Open Sans', sans-serif;
    margin: 0;
    padding: 0;
  }

  .wallet-container {
    max-width: 600px;
    margin: 50px auto;
    background-color: #ffffff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    text-align: center;
  }

  h1 {
    color: #212529;
    font-size: 32px;
    margin-bottom: 20px;
  }

  p {
    color: #484848;
    font-size: 18px;
    margin-bottom: 15px;
  }

  a {
    color: #007bff;
    text-decoration: none;
    font-size: 16px;
    display: inline-block;
    margin-top: 20px;
  }

  a:hover {
    text-decoration: underline;
  }

  .btn-back {
    margin-top: 20px;
  }

  .wallet-info {
    margin-top: 20px;
  }

  .wallet-balance {
    font-size: 24px;
    margin-top: 10px;
  }

  .txn-history {
    margin-top: 20px;
  }

  .txn-list {
    margin-bottom: 10px;
    font-size: 18px;
  }

  .debit-amount {
    color: green;
    font-weight: bold;
  }

  .credit-amount {
    color: red;
    font-weight: bold;
  }

</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="new-integrity-value" crossorigin="anonymous" referrerpolicy="no-referrer" />

<div class="mt-5 ms-5">
  <a href="/home" class="btn btn-dark">BACK</a>
</div>

  <div class="wallet-container">
    <h1>My E-wallet</h1>
  
    

    <% if (wallet && wallet.walletBalance > 0) { %>
      <p class="wallet-balance">Wallet Balance: <%= wallet.walletBalance %>/-</p>
    <% } else { %>
      <p class="wallet-balance">Wallet Balance: 0/-</p>
    <% } %>
    

    <hr>
  
    <div class="txn-history">
      <p><b>History</b></p>
    
      <% if (orderData.length===0) { %>
        <p class="txn-list">No transactions : <span class="debit-amount">0</span></p>
      <% } else { %>
        <% data.forEach(function(item) { %>
          <p class="txn-list">Payment: <%= item.paymentMethod %> | Qty: <%= item.quantity %><span
            class="debit-amount">+<%= item.totalPrice %>/-</span></p>
        <% }); %>
      <% } %>
    
      <% if (orderData.length===0) { %>
        <p class="txn-list">No transactions : <span class="credit-amount">0</span></p>
      <% } else { %>
        <% data1.forEach(function(item) { %>
          <p class="txn-list">Payment: <%= item.paymentMethod %> | Qty: <%= item.quantity %><span
            class="credit-amount">-<%= item.totalPrice %>/-</span></p>
        <% }); %>
      <% } %>
    </div>
    
  </div>

<%- include('../userLayouts/userFoot.ejs') %> 

